<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TestResults">

    <android.support.v7.widget.Toolbar
        android:id="@+id/testResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize" />

    <EditText
        android:id="@+id/bloodWork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:hint="Blood work"
        android:inputType="textLongMessage"
        android:padding="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/dateOfService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:hint="Date of service"
            android:inputType="text"
            android:padding="11dp" />

        <EditText
            android:id="@+id/normalRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:hint="Normal range"
            android:inputType="text"
            android:padding="11dp" />

        <EditText
            android:id="@+id/yourValues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:hint="Your Values"
            android:inputType="text"
            android:padding="11dp" />

    </LinearLayout>

    <Button
        android:id="@+id/submitTestResults"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="serif"
        android:gravity="center"
        android:padding="10dip"
        android:text="Submit"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bloodWorkDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="serif"
        android:gravity="left"
        android:padding="10dip"
        android:text="Recent test results"
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/testResultsListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
