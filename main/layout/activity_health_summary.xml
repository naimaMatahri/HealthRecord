<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HealthSummary">

    <android.support.v7.widget.Toolbar
        android:id="@+id/healthSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize" />

    <EditText
        android:id="@+id/addHealthSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:hint="Add health summary"
        android:inputType="textLongMessage"
        android:padding="30dp" />

    <Button
        android:id="@+id/submitHealthSummary"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="serif"
        android:gravity="center"
        android:padding="10dip"
        android:text="Submit"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/healthSummaryTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="serif"
        android:gravity="left"
        android:padding="10dip"
        android:text="Current Health Summary"
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/currentHealthSummaryListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
