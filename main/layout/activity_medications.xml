<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Medications">

    <android.support.v7.widget.Toolbar
        android:id="@+id/medications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize" />

    <EditText
        android:id="@+id/medName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:hint="Medication's Name"
        android:inputType="textLongMessage"
        android:padding="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/daysSupply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:hint="Days Supply"
            android:inputType="number"
            android:padding="20dp" />

        <EditText
            android:id="@+id/dose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:hint="Dose"
            android:inputType="text"
            android:padding="20dp" />

        <EditText
            android:id="@+id/dateDispensed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:hint="Date Dispensed"
            android:inputType="text"
            android:padding="20dp" />

    </LinearLayout>

    <Button
        android:id="@+id/submitMedications"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="serif"
        android:gravity="center"
        android:padding="10dip"
        android:text="Submit"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/currentMedications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="serif"
        android:gravity="left"
        android:padding="10dip"
        android:text="Current Medications"
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/currentMedicationsListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
